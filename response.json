def ai_title_description(title):
    api_url = f"https://generativelanguage.googleapis.com/v1/models/gemini-pro:generateText?key={GEMINI_API_KEY}"
    data = {"prompt": f"Generate an optimized YouTube title and description for '{title}' with high SEO impact."}
    headers = {"Content-Type": "application/json"}

    response = requests.post(api_url, headers=headers, json=data)

    try:
        response_data = response.json()
        print("API Response:", response_data)  # Debugging ke liye

        if "candidates" in response_data and response_data["candidates"]:
            return response_data["candidates"][0].get("output", "No AI Title Found.")
        else:
            return "⚠️ AI Response Invalid: No candidates found."
    except json.decoder.JSONDecodeError:
        return "⚠️ API Response Error: Invalid JSON format received."￼Enter
